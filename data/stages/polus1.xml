<stage zoom="0.7" name="Polus Lab (Outside)" folder="stages/polus1" startCamPosX="0" startCamPosY="0">
    <extension script="impostorPixel"/>

    <!-- moon -->
    <sprite name="moon" sprite="moon" x="320" y="0" zoomfactor="0.2" antialiasing="false" scale="1.5" scroll="0.01"/>

    <!-- rocks -->
    <sprite name="rocks4" sprite="rocks4" x="180" y="80" antialiasing="false" scroll="0.2" scale="5"/>
    <sprite name="rocks3" sprite="rocks3" x="100" y="100" antialiasing="false" scroll="0.3" scale="5"/>
    <sprite name="rocks2" sprite="rocks2" x="100" y="200" antialiasing="false" scroll="0.4" scale="6"/>
    <sprite name="rocks1" sprite="rocks1" x="-80" y="-200" antialiasing="false" scroll="0.5" scale="7"/>

    <!-- moon bloom -->
    <sprite name="moonBloom" sprite="moon-bloom" x="320" y="0" zoomfactor="0.2" antialiasing="false" scale="1.5" scroll="0.01" alpha="0.25">
        <property name="blend" type="integer" value="0"/>
    </sprite>

    <!-- medbay and the passage to the specimen room -->
    <sprite name="medbay_normal" sprite="medbay" x="860" y="10" antialiasing="false" scale="10" scroll="0.75" >
        <anim name="idle" anim="idle normal" loop="true" fps="1"/>
    </sprite>
    <sprite name="medbay_dark" sprite="medbay" x="860" y="10" antialiasing="false" scale="10" scroll="0.75" >
        <anim name="idle" anim="idle dark" loop="true" fps="1"/>
        <property name="visible" type="bool" value="false"/>
    </sprite>

    <!-- the laboratory wall -->
    <sprite name="labWall_normal" sprite="lab-wall" x="680" y="-10" antialiasing="false" scale="10" scroll="0.9" >
        <anim name="idle" anim="idle normal" loop="true" fps="1"/>
    </sprite>
    <sprite name="labWall_dark" sprite="lab-wall" x="680" y="-10" antialiasing="false" scale="10" scroll="0.9" >
        <anim name="idle" anim="idle dark" loop="true" fps="1"/>
        <property name="visible" type="bool" value="false"/>
    </sprite>

    <!-- ground -->
    <sprite name="ground_normal" sprite="ground" x="16" y="483" antialiasing="false" scale="10" >
        <anim name="idle" anim="idle normal" loop="true" fps="1"/>
    </sprite>
    <sprite name="ground_dark" sprite="ground" x="16" y="483" antialiasing="false" scale="10">
        <anim name="idle" anim="idle dark" loop="true" fps="1"/>
        <property name="visible" type="bool" value="false"/>
    </sprite>

    <!-- lab entrance + fence -->
    <sprite name="labEntrance_normal" sprite="lab-entrance" x="159" y="-124" antialiasing="false" scale="10" type="loop" >
        <anim name="watch" anim="watch normal" loop="true" fps="4"/>
        <anim name="idle" anim="idle normal" loop="true" fps="1"/>
    </sprite>
    <sprite name="labEntrance_dark" sprite="lab-entrance" x="159" y="-124" antialiasing="false" scale="10" type="loop" >
        <anim name="watch" anim="watch dark" loop="true" fps="4"/>
        <anim name="idle" anim="idle dark" loop="true" fps="1"/>
        <property name="visible" type="bool" value="false"/>
    </sprite>

    <girlfriend x="137" y="24" scroll="1"/>
    <dad x="-452" y="69" camxoffset="0" camyoffset="80"/>
    <boyfriend x="670" y="240" camxoffset="-100" camyoffset="-38"/>
</stage>